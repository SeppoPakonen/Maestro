@startuml
!include /home/sblo/Dev/Maestro/docs/workflows/internal/_shared.puml

start
:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'understand';
}

partition "Command Router" {
    if (Command is 'understand'?) then (yes)
        :Parse understand subcommands;
    else (no)
        :Continue to other handlers;
    endif
}

partition "Command Router" {
    if (Subcommand provided?) then (yes)
        if (Subcommand is 'dump'?) then (yes)
            :Route to handle_understand_dump;
        else (other)
            :Show understand help;
            EXIT_FAIL()
        endif
    else (no)
        :Show understand help;
        EXIT_FAIL()
    endif
}

partition "Repo / FS" {
    :Analyze project structure;
    :Read project files;
    :Generate understanding dump;
    :Write analysis to output path;
}

partition "CLI / Argparse" {
    :Output results to stdout;
    EXIT_OK()
}

stop
@enduml