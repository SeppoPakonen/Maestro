@startuml
!include /home/sblo/Dev/Maestro/docs/workflows/internal/_shared.puml

start
:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'convert';
}

partition "Command Router" {
    if (Command is 'convert'?) then (yes)
        :Parse convert subcommands;
    else (no)
        :Continue to other handlers;
    endif
}

partition "Command Router" {
    if (Subcommand provided?) then (yes)
        if (Subcommand is 'new'?) then (yes)
            :Route to handle_convert_new;
        elseif (Subcommand is 'plan'?) then (yes)
            :Route to handle_convert_plan;
        elseif (Subcommand is 'run'?) then (yes)
            :Route to handle_convert_run;
        elseif (Subcommand is 'status'?) then (yes)
            :Route to handle_convert_status;
        elseif (Subcommand is 'show'?) then (yes)
            :Route to handle_convert_show;
        elseif (Subcommand is 'reset'?) then (yes)
            :Route to handle_convert_reset;
        elseif (Subcommand is 'batch'?) then (yes)
            :Route to handle_convert_batch;
        else (other)
            :Show convert help;
            EXIT_FAIL()
        endif
    else (no)
        :Show convert help;
        EXIT_FAIL()
    endif
}

partition "Repo / FS" {
    :Execute conversion operation;
    :Read source data;
    :Write converted data;
}

partition "CLI / Argparse" {
    :Output results to stdout;
    EXIT_OK()
}

stop
@enduml