@startuml
!include /home/sblo/Dev/Maestro/docs/workflows/internal/_shared.puml

start
:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'plan';
}

partition "Command Router" {
    if (Command is 'plan'?) then (yes)
        :Parse plan subcommands;
        if (Session provided?) then (yes)
            LOAD_SESSION()
        else (no)
            HARD_STOP("Session required for plan operations")
        endif
    else (no)
        :Continue to other handlers;
    endif
}

partition "Session Store" {
    :Validate session schema;
}

partition "Command Router" {
    if (Subcommand provided?) then (yes)
        if (Subcommand is 'add'?) then (yes)
            :Route to handle_plan_add;
        elseif (Subcommand is 'list'?) then (yes)
            :Route to handle_plan_list;
        elseif (Subcommand is 'remove'?) then (yes)
            :Route to handle_plan_remove;
        elseif (Subcommand is 'show'?) then (yes)
            :Route to handle_plan_show;
        elseif (Subcommand is 'add-item'?) then (yes)
            :Route to handle_plan_add_item;
        elseif (Subcommand is 'remove-item'?) then (yes)
            :Route to handle_plan_remove_item;
        elseif (Subcommand is 'ops'?) then (yes)
            :Route to plan ops handlers;
        elseif (Subcommand is 'discuss'?) then (yes)
            :Route to handle_plan_discuss;
        elseif (Subcommand is 'explore'?) then (yes)
            :Route to handle_plan_explore;
        else (other)
            :Show plan help;
            EXIT_FAIL()
        endif
    else (no)
        :Show plan help;
        EXIT_FAIL()
    endif
}

partition "Docs Truth Store" {
    READ_DOCS_TRUTH()
    :Execute plan operation;
    WRITE_DOCS_TRUTH()
}

partition "CLI / Argparse" {
    :Output results to stdout;
    EXIT_OK()
}

stop
@enduml