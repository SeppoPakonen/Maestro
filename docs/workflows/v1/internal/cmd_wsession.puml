@startuml
!include /home/sblo/Dev/Maestro/docs/workflows/internal/_shared.puml

start
:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'wsession';
}

partition "Command Router" {
    if (Command is 'wsession'?) then (yes)
        :Parse wsession subcommands;
    else (no)
        :Continue to other handlers;
    endif
}

partition "Command Router" {
    if (Subcommand provided?) then (yes)
        if (Subcommand is 'list'?) then (yes)
            :Route to handle_wsession_list;
        elseif (Subcommand is 'show'?) then (yes)
            :Route to handle_wsession_show;
        elseif (Subcommand is 'tree'?) then (yes)
            :Route to handle_wsession_tree;
        elseif (Subcommand is 'breadcrumbs'?) then (yes)
            :Route to handle_wsession_breadcrumbs;
        elseif (Subcommand is 'timeline'?) then (yes)
            :Route to handle_wsession_timeline;
        elseif (Subcommand is 'stats'?) then (yes)
            :Route to handle_wsession_stats;
        else (other)
            :Show wsession help;
            EXIT_FAIL()
        endif
    else (no)
        :Show wsession help;
        EXIT_FAIL()
    endif
}

partition "Session Store" {
    :Read work session data;
    :Process wsession operation;
}

partition "CLI / Argparse" {
    :Output results to stdout;
    EXIT_OK()
}

stop
@enduml