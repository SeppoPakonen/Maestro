@startuml
!include /home/sblo/Dev/Maestro/docs/workflows/internal/_shared.puml

start
:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'task';
}

partition "Command Router" {
    if (Command is 'task'?) then (yes)
        :Parse task subcommands;
        if (Session provided?) then (yes)
            LOAD_SESSION()
        else (no)
            HARD_STOP("Session required for task operations")
        endif
    else (no)
        :Continue to other handlers;
    endif
}

partition "Session Store" {
    :Validate session schema;
}

partition "Command Router" {
    if (Subcommand provided?) then (yes)
        if (Subcommand is 'list'?) then (yes)
            :Route to handle_task_command;
        elseif (Subcommand is 'add'?) then (yes)
            :Route to handle_task_command;
        elseif (Subcommand is 'remove'?) then (yes)
            :Route to handle_task_command;
        else (other)
            :Show task help;
            EXIT_FAIL()
        endif
    else (no)
        :Show task help;
        EXIT_FAIL()
    endif
}

partition "Docs Truth Store" {
    READ_DOCS_TRUTH()
    :Execute task operation;
    WRITE_DOCS_TRUTH()
}

partition "CLI / Argparse" {
    :Output results to stdout;
    EXIT_OK()
}

stop
@enduml