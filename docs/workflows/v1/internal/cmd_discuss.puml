:Maestro CLI Invocation;

partition "CLI / Argparse" {
    ENTRYPOINT()
    PARSE_ARGS()
    :Determine command is 'discuss';
}

partition "Command Router" {
    if (Command is 'discuss'?) then (yes)
        if (Session provided?) then (yes)
            LOAD_SESSION()
        else (no)
            HARD_STOP("Session required for discuss")
        endif
    else (no)
        :Continue to other handlers;
    endif
}

partition "Session Store" {
    :Validate session schema;
}

partition "Command Router" {
    :Route to discuss handler;
}

partition "Docs Truth Store" {
    READ_DOCS_TRUTH()
}

partition "AI Engine" {
    :Initialize AI discussion interface;
    :Load AI configuration;
    INVOKE_AI_ENGINE()
}

partition "CLI / Argparse" {
    :Output discussion to stdout;
    :Handle user input;
    EXIT_OK()
}

stop
@enduml