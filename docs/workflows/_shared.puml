skinparam backgroundColor #FFFFFF
skinparam shadowing false
skinparam defaultFontName Arial
skinparam defaultFontSize 11

skinparam swimlane {
  BorderColor #666666
  TitleFontSize 12
  TitleFontStyle bold
}

skinparam activity {
  BackgroundColor #E3F2FD
  BorderColor #1976D2
  FontSize 10
}

skinparam note {
  BackgroundColor #FFF9C4
  BorderColor #F57F17
