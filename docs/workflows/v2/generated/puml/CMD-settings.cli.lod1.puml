component "load session" as load_session
component "validate session schema" as validate_session
component "route to settings handler" as route_settings_handler
component "read configuration files" as read_config
component "process settings operation" as process_settings_op
component "write configuration updates" as write_config
rectangle "output results to stdout" as output_results
rectangle "exit with success code" as exit_ok
component "hard stop if no session provided" as hard_stop_no_session
cmd_settings_entry --> parse_args
